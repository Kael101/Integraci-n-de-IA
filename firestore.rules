rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Reglas para reportes de campo: solo usuarios autenticados pueden escribir
    match /reportes_campo/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Regla por defecto (opcional, bloquear el resto por seguridad)
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
